@{
    var isContact = Request.Url != null && Request.Url.AbsolutePath.Contains("Contact");
}
<!doctype html>
<html class="no-js" lang="en-us">
<head>
    <!-- META DATA -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <!--[if IE]><meta http-equiv="cleartype" content="on" /><![endif]-->
    <!-- SEO -->
    <title>@ViewBag.Title | SBB</title>
    <meta name="description" content="Web Application" />
    <meta name="author" content="" />
    <!-- ICONS -->
    <link rel="shortcut icon" href="@Url.Content("~/assets/media/images/favicons/favicon.ico")" type="image/x-icon" />
    <!-- Apple Touch Icons -->
    <!-- FONTS -->
    <link href='http://fonts.googleapis.com/css?family=Oswald:700,400,300' rel='stylesheet' type='text/css' />
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,400italic' rel='stylesheet' type='text/css' />
    <!-- STYLESHEETS -->
    <!-- build:css assets/styles/screen.css -->
    <link rel="stylesheet" media="screen, projection" href="@Url.Content("~/assets/styles/bootstrap.css")" />
    <link rel="stylesheet" media="screen, projection" href="@Url.Content("~/assets/styles/custom.css")" />
    <!-- SVG/PNG ICONS -->
    <script src='@Url.Content("~/Scripts/jquery-1.10.2.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/assets/scripts/custom.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/bootstrap.js")' type='text/javascript'></script>

    <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
    <script type="text/javascript">
        stLight.options({
            publisher: '12345'
        });
    </script>
</head>
    <body>
        <noscript><div class="no-js-message">JavaScript must be enabled to use this application.</div></noscript>
        <header>
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                            <h1>Sisters Behind Bars</h1>
                        </a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainNav">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="nav navbar-nav navbar-right" role="menu">
                            <li class="@(isContact ? "" : "active")"><a href="@ViewBag.BaseUrl#featured" class="active">Home</a></li>
                            <li><a href="@ViewBag.BaseUrl#about">About Us</a></li>
                            <li><a href="@ViewBag.BaseUrl#bakedgoods">Baked Goods</a></li>
                            @*<li><a href="#">Prices & Policies</a></li>*@
                            @*<li><a href="#">Order</a></li>*@
                            <li class="@(isContact ? "active" : "")"><a href="@Url.Action("Index", "Contact")">Contact Us</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </header>
        @RenderBody()
        <footer>
            <a href="http://www.facebook.com/sistersbehindbars" target="_blank"><img src='~/assets/media/images/socialicons/facebookcake.png' style="width: 60px; height: 60px" /></a>
            <a href="http://www.instagram.com/sistersbehindbars" target="_blank"><img src='~/assets/media/images/socialicons/instagramcake.png' style="width: 60px; height: 60px;" /></a>
            <a href="http://www.pinterest.com/sistersbehindbars" target="_blank"><img src='~/assets/media/images/socialicons/pinterestcake.png' style="width: 60px; height: 60px;" /></a>
        </footer>
    </body>
</html>
